            <div class="relative">
                <input type="search" placeholder="Search" id="search" class="border rounded-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-black">
            </div>
        </nav>
    </header>
    <main>
        {{ content | safe }}
    </main>
    <footer class="bg-gray-800 text-white py-8 mt-16">
        <div class="container mx-auto px-4">
            <p class="text-center">&copy; 2023 BR. All rights reserved.</p>
        </div>
    </footer>
    <script src="https://unpkg.com/lunr/lunr.js"></script>
    <script src="/assets/js/search.js"></script>
